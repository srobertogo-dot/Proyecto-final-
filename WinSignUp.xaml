<Window x:Class="proyecto_final.WinSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_final"
        mc:Ignorable="d"
        Title="WinSignUp" Height="990" Width="700">
    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/img/impuestos crjo.jpg"
               Stretch="Fill"
               Opacity="0.5"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="123*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Titulo"
               Content="Sign Up Impuestos"
               FontSize="50"
               FontWeight="Bold"
               HorizontalAlignment="Center" Margin="49,19,39,5" Width="458" Grid.ColumnSpan="2"/>
            <StackPanel Grid.Row="1"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
            <Label x:Name="lblNombre"
                      Content="Nombre:"
                      FontSize="20"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      Margin="67,33,77,22" Grid.Row="1"/>
            <TextBox x:Name="txtNombre" Margin="0,35,21,9" Grid.Row="1" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtNombre_PreviewTextInput"/>
            <StackPanel Grid.ColumnSpan="2"/>
            <StackPanel Grid.Row="2"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
            <Label x:Name="lblApPaterno"
                      Content="Ap,Paterno:"
                      FontSize="20"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      Margin="57,40,76,15" Grid.Row="2"/>
            <TextBox x:Name="txtApMat" Margin="0,41,20,3" Grid.Row="3" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtApMat_PreviewTextInput"/>
            <StackPanel Grid.ColumnSpan="2"/>
            <StackPanel Grid.Row="3"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
            <Label x:Name="lblApMaterno"
                      Content="Ap,Materno:"
                      FontSize="20"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      Margin="57,41,72,14" Grid.Row="3"/>
            <TextBox x:Name="txtApPat" Margin="1,43,20,0" Grid.Row="2" Opacity="0.7" Grid.Column="1" PreviewTextInput="txtApPat_PreviewTextInput"/>
            <StackPanel Grid.ColumnSpan="2"/>
            <StackPanel Grid.Row="4"
                    Margin="20,0"
                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
            <Button x:Name="btnAceptar"
        Content="Aceptar"
        FontSize="20"
        FontWeight="Bold"
        Height="60"
        Margin="54,15,93,13"
        Background="Cyan" Grid.Row="8" Click="btnAceptar_Click" Grid.Column="1"/>


            <Button x:Name="btnLimpiar"
        Content="Limpiar"
        FontSize="20"
        FontWeight="Bold"
        Height="60"
        Margin="103,14,49,14"
        Background="Turquoise" Grid.Row="8" Click="btnLimpiar_Click"/>

            <StackPanel Grid.ColumnSpan="2"/>
            <TextBlock x:Name="txBResultado"
                   Grid.Row="10"
                   Margin="10"
                   Background="Azure"
                   Opacity="0.7" Grid.ColumnSpan="2"/>
            <Label x:Name="lblci"
            Content="CI_:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="57,40,76,16" Grid.Row="4"/>
            <TextBox x:Name="txtCi" Margin="1,36,20,7" Grid.Row="4" Opacity="0.7" Grid.Column="1" TextChanged="txtCi_TextChanged" />
            <Label x:Name="lblDireccion"
            Content="Direccion"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="56,31,77,24" Grid.Row="6"/>
            <TextBox x:Name="txtDireccion" Margin="0,21,21,22" Grid.Row="6" Opacity="0.7" Grid.Column="1" TextChanged="txtDireccion_TextChanged" />


            <Label x:Name="lblCelular"
            Content="Celular:"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
            Margin="56,40,77,15" Grid.Row="5"/>
            <TextBox x:Name="txtCel" Margin="0,33,21,10" Grid.Row="5" Opacity="0.7" Grid.Column="1"  PreviewTextInput="txtCel_PreviewTextInput"/>
            <Label x:Name="lblMensajes"
                Grid.Row="8"
               Grid.Column="2"/>


        </Grid>
    </Grid>
</Window>
