<Window x:Class="proyecto_final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_final"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="750">
    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/img/impuestos crjo.jpg"
               Stretch="Fill"

               Opacity="0.5"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="184*"/>
                <RowDefinition Height="189*"/>
                <RowDefinition Height="153*"/>


                <RowDefinition Height="214"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="123*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="Titulo"

               Content="Login Impuestos"

               FontSize="50"

               FontWeight="Bold"

               HorizontalAlignment="Center" Margin="84,14,20,10" Width="452" Grid.ColumnSpan="2" Height="76"/>

            <StackPanel Grid.Row="3"

                    Margin="20,0"

                    Orientation="Horizontal" Grid.ColumnSpan="2"/>
            <Button x:Name="btnAceptar"

        Content="Aceptar"

        FontSize="20"

        FontWeight="Bold"

        Margin="37,54,101,44"

        Background="Cyan" Grid.Row="3" Click="btnAceptar_Click" Grid.Column="1"/>
            <Button x:Name="btnRegistrar"

        Content="Registrarse"

        FontSize="20"

        FontWeight="Bold"

        Margin="200,64,198,78"

        Background="Cyan" Grid.Row="4" Grid.ColumnSpan="2" Click="btnRegistrar_Click"/>

            <Button x:Name="btnLimpiar"

        Content="Limpiar"

        FontSize="20"

        FontWeight="Bold"

        Margin="86,54,67,45"

        Background="Turquoise" Grid.Row="3" Click="btnLimpiar_Click"/>

            <StackPanel Grid.ColumnSpan="2"/>

            <Label x:Name="lblTelefono"

            Content="Telefono:"

            FontSize="20"

            FontWeight="Bold"

            VerticalAlignment="Center"

            Margin="0,85,53,63" Grid.Row="1" Height="36" Width="98"/>
            <TextBox x:Name="txtTelefono" Margin="11,85,10,48" Grid.Row="1" Opacity="0.7" Grid.Column="1"  Height="Auto" PreviewTextInput="txtTelefono_PreviewTextChanged"/>


            <Label x:Name="lblCi"

            Content="CI:"

            FontSize="20"

            FontWeight="Bold"

            VerticalAlignment="Center"

            Margin="0,81,67,70" Grid.Row="2" Height="38" Width="35" RenderTransformOrigin="0.533,0.934"/>
            <PasswordBox x:Name="txtCi" Margin="10,81,11,57" Grid.Row="2" Opacity="0.7" Grid.Column="1"  RenderTransformOrigin="0.566,0.236" PreviewTextInput="txtCi_PreviewTextInput"/>

            <Label x:Name="lblMensajes"

                Grid.Row="4"

               Grid.Column="1" Height="10" Margin="0,2,20,202" Width="10"/>


        </Grid>

    </Grid>
</Window>
