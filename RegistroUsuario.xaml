<Window x:Class="proyecto_final.RegistroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_final"
        mc:Ignorable="d"
        Title="RegistroUsuario" Height="950" Width="800">
    <Grid>
        <Grid>
            <!-- Fondo de imagen -->
            <Grid.Background>
                <ImageBrush ImageSource="/img/impuestos crjo.jpg"
                    Stretch="Fill"

                    Opacity="0.5"/>
            </Grid.Background>

            <!-- Definición de filas -->
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <!-- Título -->
                <RowDefinition Height="80"/>
                <!-- NIT -->
                <RowDefinition Height="80"/>
                <!-- CI Representante -->
                <RowDefinition Height="80"/>
                <!-- Nombre Representante -->
                <RowDefinition Height="80"/>
                <!-- Poder -->
                <RowDefinition Height="80"/>
                <!-- FUNDEMPRESA -->
                <RowDefinition Height="80"/>
                <!-- Domicilio laboral -->
                <RowDefinition Height="80"/>
                <!-- Documento domicilio -->
                <RowDefinition Height="80"/>
                <!-- Contratos -->
                <RowDefinition Height="150"/>
                <!-- Botones -->
            </Grid.RowDefinitions>

            <!-- Columnas -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TÍTULO -->
            <Label Content="Registro De Empresas"

           FontSize="38" FontWeight="Bold"

           HorizontalAlignment="Center"

           Grid.ColumnSpan="2"

           Margin="203,30,178,10" Height="61" Width="411"/>

            <!-- NIT -->
            <Label Content="NIT Empresa:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="1" Height="37" Width="134"/>
            <TextBox x:Name="txtNIT" Grid.Row="1" Grid.Column="1"

             Margin="0,15,40,16" Opacity="0.8" Height="Auto"/>

            <!-- CI Representante -->
            <Label Content="CI Representante:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="2" Height="37" Width="175"/>
            <TextBox x:Name="txtCIRepresentante" Grid.Row="2" Grid.Column="1"

             Margin="0,16,40,15" Opacity="0.8" Height="Auto"/>

            <!-- Nombre Representante -->
            <Label Content="Nombre Representante:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="3" Height="37" Width="195"/>
            <TextBox x:Name="txtNombreRepresentante" Grid.Row="3" Grid.Column="1"

             Margin="0,15,40,16" Opacity="0.8" Height="Auto"/>

            <!-- Poder Representante -->
            <Label Content="Poder Representante:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="4" Height="37" Width="195"/>
            <TextBox x:Name="txtPoder" Grid.Row="4" Grid.Column="1"

             Margin="0,16,40,15" Opacity="0.8" Height="Auto"/>

            <!-- Matrícula FUNDEMPRESA -->
            <Label Content="Fundempresa:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="5" Height="37" Width="142"/>
            <TextBox x:Name="txtFundempresa" Grid.Row="5" Grid.Column="1"

             Margin="0,15,40,16" Opacity="0.8" Height="Auto"/>

            <!-- Dirección laboral -->
            <Label Content="Domicilio Laboral:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="6" Height="37" Width="181"/>
            <TextBox x:Name="txtDomicilioLaboral" Grid.Row="6" Grid.Column="1"

             Margin="0,16,40,15" Opacity="0.8" Height="Auto"/>

            <!-- Documento de domicilio -->
            <Label Content="Doc. Domicilio:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="7" Height="37" Width="153"/>
            <TextBox x:Name="txtDocDomicilio" Grid.Row="7" Grid.Column="1"

             Margin="0,15,40,16" Opacity="0.8" Height="Auto"/>

            <!-- Contratos -->
            <Label Content="Contratos Trabajo:" FontSize="20" FontWeight="Bold"

           VerticalAlignment="Center" Margin="0,22,40,22"

           Grid.Row="8" Height="37" Width="183"/>
            <TextBox x:Name="txtContratos" Grid.Row="8" Grid.Column="1"

             Margin="0,15,40,6" Opacity="0.8"

             AcceptsReturn="True" Height="Auto" TextWrapping="Wrap"/>

            <!-- BOTONES -->
            <Button x:Name="btnAceptar"

            Content="Registrar"

            FontSize="22" FontWeight="Bold"

            Width="200"

            Background="Cyan"

            Grid.Row="9" Grid.Column="1"

            HorizontalAlignment="Left"

            Margin="40,45,0,46" Click="btnAceptar_Click"/>

            <Button x:Name="btnLimpiar"

            Content="Limpiar"

            FontSize="22" FontWeight="Bold"

            Width="200"

            Background="Turquoise"

            Grid.Row="9" Grid.Column="0"

            HorizontalAlignment="Right"

            Margin="0,45,40,46" Click="btnLimpiar_Click"/>

        </Grid>

    </Grid>
</Window>
