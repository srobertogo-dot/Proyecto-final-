<Window x:Class="proyecto_final.WinPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_final"
        mc:Ignorable="d"
        Title="WinPrincipal" Height="500" Width="650">
    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/img/impuestos crjo.jpg"

               Stretch="Fill"

               Opacity="0.7"/>
            </Grid.Background>
            <Label x:Name="lblBienvenido"

               Content="Bienvenido a impuestos nacionales "

               HorizontalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>
